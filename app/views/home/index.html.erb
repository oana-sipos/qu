<div class="container">
  <div class="boxes">
    <% @questions.each do |q| %>
      <div class="media" data-target="<%= question_path(q) %>" >
        <div class="media-left">
          <a href="#">
            <img class="media-object" src="<%= q.gravatar %>">
          </a>
        </div>
        <div class="media-body">
          <h4 class="media-heading"><%= q.email %> has asked...</h4>
            <div class="time">
              <%= time_ago_in_words q.created_at %> ago<br />
            </div>
            <%= q.body %>
          <div>
            <a href="<%= question_path(q) %>" class="btn btn-success btn-xs">View Answers</a>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <% if @questions.empty? %>
    <div class="alert alert-info">Nothing here yet, be the first to ask?</div>
  <% end %>
</div>
